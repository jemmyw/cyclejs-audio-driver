{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "noImplicitAny": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "strictNullChecks": true,
    "lib": [
      "es6",
      "es2015.promise",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
